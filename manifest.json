{
    "manifest_version": 3,
    "name": "Better YouTube Captions",
    "version": "1.0",
    "description": "Custom captions for YouTube with better syncing. Please work",
    "permissions": [],
    "host_permissions": ["https://www.youtube.com/*"],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"],
        "run_at": "document_idle"
      }
    ]
  }
  